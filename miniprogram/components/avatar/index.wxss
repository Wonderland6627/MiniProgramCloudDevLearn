/* components/avatar/index.wxss */
.i-avatar{
  display: inline-block;
  text-align: center;
  background: #ccc;
  color: #ccc;
  white-space: nowrap;
  overflow: hidden;
  position: relative;
  vertical-align: middle;
  width: 32px;
  height: 32px;
  line-height: 32px;
  border-radius: 16px;
  font-size: 18px;
}

.i-avatar .i-avatar-string {
  line-height: 32px;
}

.i-avatar-large {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  font-size: 24px;
  line-height: 40px;
}

.i-avatar-large .i-avatar-string{
  line-height: 40px;
}

.i-avatar-small {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  font-size: 14px;
  line-height: 24px;
}

.i-avatar-small .i-avatar-string{
  line-height: 24px;
}

.i-avatar-image {
  background: 0 0 ;
  /* background-position-x: 0;
  background-position-y: 0; */
}

.i-avatar-square{
  border-radius: 4px;
}

.i-avatar-image>image{
  width: 100%;
  height: 100%;
}


