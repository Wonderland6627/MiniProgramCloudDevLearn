/* pages/nbstudy/login/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-top: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #00aaff;
  margin-bottom: 80rpx;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 8rpx;
}

.common-btn:active {
  opacity: 0.8;
}

.agreement {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
  margin-top: 60rpx;
}

.agreement navigator {
  color: #00aaff;
  margin: 0 5rpx;
}