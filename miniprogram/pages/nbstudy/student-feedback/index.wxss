/* pages/nbstudy/student-feedback/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feedback-input {
  width: 90%;
  height: 600rpx;
  padding: 10rpx 10rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #888;
  font-size: 28rpx;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 8rpx;
}

.common-btn:active {
  opacity: 0.8;
}