/* pages/nbstudy/admin-edit/index.wxss */
.scrollview {
  height: 100vh;
}

.cell {
  display: flex;
  flex-direction: row;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.avatar-container {
  width: 50px;
  height: 50px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  margin-right: 10px;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-weight: bold;
  margin-bottom: 5px;
}

.message {
  color: #888;
}