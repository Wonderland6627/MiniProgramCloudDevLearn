/* pages/nbstudy/admin-edit/index.wxss */
.my-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background {
  width: 100%;
  height: 400rpx;
  background-color: #ff8533;
  background-size: cover;
  background-position: center;
}

.settings {
  width: 100%;
  background-color: #fff;
  padding: 0rpx;
  margin-top: 0rpx;
}

.setting-cell {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.setting-cell-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.setting-cell-text {
  font-size: 30rpx;
}
