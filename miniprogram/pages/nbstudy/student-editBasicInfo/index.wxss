.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.avatar-tips {
  font-size: 20rpx;
  color: rgb(100, 100, 100);
}

.edit-container {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.edit-title {
  font-size: 32rpx;
  color: rgb(100, 100, 100);
  padding: 20rpx;
}

.edit-cell {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-top: 1px solid #eee;
}

.edit-cell .icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.edit-cell .title {
  writing-mode: horizontal-tb;
  font-size: 28rpx;
  color: rgb(100, 100, 100);
  margin-right: 20rpx;
}

.edit-input {
  font-size: 28rpx;
  width: 500rpx;
}

.edit-picker .picker {
  font-size: 28rpx;
}

.edit-picker .edit-picker-placeholder-text {
  color: #808080;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 8rpx;
}

.common-btn:active {
  opacity: 0.8;
}