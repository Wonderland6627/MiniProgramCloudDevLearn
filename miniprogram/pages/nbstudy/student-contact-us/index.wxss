/* pages/nbstudy/student-contact-us/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  background-color: #fff;
  padding: 40rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  /* box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); */
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.contact-phone {
  font-size: 18px;
  color: blue;
  text-decoration: underline;
}

.contact-email {
  font-size: 18px;
  color: #333;
  margin-top: -20rpx;
  margin-bottom: 20rpx
}

.contact-call {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  padding: 10rpx 6rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
}

.contact-icon {
  width: 46rpx;
  height: 46rpx;
  margin-left: 16rpx;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 8rpx;
}

.common-btn:active {
  opacity: 0.8;
}