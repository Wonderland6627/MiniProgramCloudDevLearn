/* pages/nbstudy/student-contact-us/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.qrcode {
  width: 400rpx;
  height: 400rpx;
  margin-top: 20rpx;
}

.contact-info {
  width: 95%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 60rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-label {
  font-weight: bold;
  margin-right: 5rpx;
}

.info-value {
  color: #333;
}