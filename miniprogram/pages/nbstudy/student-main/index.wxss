/* pages/nbstudy/student-main/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  width: 90%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.card-subtitle {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.card-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.tool-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 10rpx;
}

.tool-icon {
  width: 60rpx;
  height: 60rpx;
}

.tool-label {
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
}