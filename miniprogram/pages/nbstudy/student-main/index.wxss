/* pages/nbstudy/student-main/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  width: 90%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.card-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.services {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.service {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  margin-top: 20px;
}

.tab {
  display: flex;
  justify-content: space-around;
}

.description {
  margin-top: 10px;
}