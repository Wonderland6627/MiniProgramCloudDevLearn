.password-change-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.label {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.input-container {
  width: 600rpx;
  height: 80rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 8rpx;
}

.common-btn:active {
  opacity: 0.8;
}