.password-change-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100px; /* 新增：设置顶部内边距为 100px */
  height: 100vh;
}

.label {
  font-size: 16px;
  margin-bottom: 10px;
}

.input-container {
  width: 300px;
  height: 40px;
  margin-bottom: 20px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 16px;
}

.button-container {
  width: 200px;
}

.save-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px;
  background: #ff8533;
  font-size: 16px;
  color: #fff;
  text-align: center;
  border-radius: 4px;
}