.password-change-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100px;
  height: 100vh;
}

.label {
  font-size: 16px;
  margin-bottom: 10px;
}

.input-container {
  width: 300px;
  height: 40px;
  margin-bottom: 20px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 16px;
}

.common-btn {
  background-color: #ff8533;
  color: #ffffff;
  text-align: center;
  border-radius: 4px;
}

.common-btn:active {
  opacity: 0.8;
}