/* pages/nbstudy/admin-main/index.wxss */

.my-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background {
  width: 100%;
  height: 200px;
  background-color: #ff8533;
  background-size: cover;
  background-position: center;
}

.settings {
  width: 100%;
  background-color: #fff;
  padding: 0px;
  margin-top: 0px;
}

.setting-cell {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.setting-cell-icon {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}

.setting-cell-text {
  font-size: 16px;
}