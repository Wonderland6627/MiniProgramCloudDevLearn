/* pages/nbstudy/admin-main/index.wxss */

.tab-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #f0f0f0;
  height: 80rpx;
}

.tab-item {
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: #888;
}

.tab-item.active {
  font-weight: bold;
  color: #ff8533;
}

.mid-container {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #f0f0f0;
  padding: 10rpx;
  margin: 10rpx 0;
}

.number-text {
  font-size: 30rpx;
  color: #888;
  margin-right: 10rpx;
}

.scroll-container {
  display: flex; 
  flex-direction: column; 
  height: 100vh;
}

.scroll-ui {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.extra-space {
  height: 400rpx;
}

.cell {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.avatar-container {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.packageInfo {
  color: #fca266;
}

.packageDate {
  color: #fca266;
}

.expiredPackageInfo {
  color: #888;
}

/* 右下角浮动加号按钮样式 */
.floating-add-button {
  position: fixed;
  bottom: 240rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #ff8533;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 133, 51, 0.4);
  z-index: 9999;
  transition: all 0.3s ease;
}

.floating-add-button:active {
  transform: scale(0.95);
  background-color: #e6731a;
}

.add-icon {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}